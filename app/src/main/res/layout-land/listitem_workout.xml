<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ImgListItemWorkout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/LblListItemWorkoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ImgListItemWorkout"
        android:textStyle="bold"/>

    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/LblListItemWorkoutNumTracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/LblListItemWorkoutName"
        app:layout_constraintTop_toTopOf="parent"/>

    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/LblListItemWorkoutNumSessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/LblListItemWorkoutNumTracks"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

