<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ImgListItemCompletedTrainingSessionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/completed_session"
        android:background="@android:color/transparent"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/LblListItemCompletedTrainingSessionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ImgListItemCompletedTrainingSessionIcon"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/LblListItemCompletedTrainingSessionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/ImgListItemCompletedTrainingSessionIcon"
        app:layout_constraintTop_toBottomOf="@id/LblListItemCompletedTrainingSessionName"/>
    <TextView
        android:id="@+id/LblListItemCompletedTrainingSessionComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_normal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/ImgListItemCompletedTrainingSessionIcon"
        app:layout_constraintTop_toBottomOf="@id/LblListItemCompletedTrainingSessionDate"
        android:textStyle="italic"/>
</android.support.constraint.ConstraintLayout>

